generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatSession {
  id String @id @default(uuid())
  user_id String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  messages ChatMessage[]

  @@map("chat_session")
}

model ChatMessage {
  id String @id @default(uuid())

  session ChatSession @relation(fields: [session_id], references: [id], onDelete: Cascade)
  session_id String

  role MessageRole
  content String
  problem String? // Original problem statement
  solution String? // Solution provided by the model
  confidence Float? // Confidence score of the model's response
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("chat_message")
}

enum MessageRole {
  USER
  ASSISTANT
}